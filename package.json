{
  "name": "risk-management",
  "version": "3.0.0",
  "description": "Template for the Learning Journey Building side-by-side extensions on SAP BTP",
  "author": "m.haug@sap.com",
  "license": "SAP SAMPLE CODE LICENSE",
  "repository": "https://github.com/SAP-samples/sap-learning-extension-suite",
  "dependencies": {
    "@cap-js/hana": "^1",
    "@sap-cloud-sdk/http-client": "3.22.2",
    "@sap-cloud-sdk/resilience": "3.22.2",
    "@sap/cds": "8.4.0",
    "@sap/cds-dk": "8.4.0",
    "@sap/cds-mtxs": "^2",
    "@sap/xssec": "^4",
    "express": "^4",
    "http-status-codes": "^2.3.0",
    "mta": "^1.0.8",
    "passport": "^0.7.0"
  },
  "devDependencies": {
    "@cap-js/sqlite": "^1",
    "@sap/cds-dk": "^8",
    "@sap/ux-specification": "^1.124.4"
  },
  "scripts": {
    "start": "cds-serve",
    "deploy:sqlite": "cds deploy --to sqlite",
    "watch-risk-management": "cds watch --open risk-management/webapp/index.html?sap-ui-xx-viewCache=false",
    "watch-riskmanagementreadonly": "cds watch --open riskmanagementreadonly/webapp/index.html?sap-ui-xx-viewCache=false"
  },
  "cds": {
    "requires": {
      "API_BUSINESS_PARTNER": {
        "kind": "odata-v2",
        "model": "srv\\external\\API_BUSINESS_PARTNER",
        "credentials": {
          "url": "https://sandbox.api.sap.com/s4hanacloud/sap/opu/odata/sap/API_BUSINESS_PARTNER/"
        }
      },
      "LOCAL_DESTINATION": {
        "kind": "odata",
        "credentials": {
          "destination": "localDestination"
        }
      },
      "db": {
        "kind": "sqlite",
        "model": "*"
      },
      "[production]": {
        "destinations": {},
        "API_BUSINESS_PARTNER": {
          "kind": "odata-v2",
          "model": "srv\\external\\API_BUSINESS_PARTNER",
          "credentials": {
            "url": "https://sandbox.api.sap.com/s4hanacloud/sap/opu/odata/sap/API_BUSINESS_PARTNER/"
          }
        },
        "LOCAL_DESTINATION": {
          "kind": "odata",
          "credentials": {
            "destination": "localDestination"
          }
        },
        "auth": "xsuaa",
        "multitenancy": true,
        "db": "hana"
      }
    },
    "profile": "with-mtx-sidecar",
    "sql": {
      "native_hana_associations": false
    }
  },
  "sapux": [
    "app/risk-management"
  ]
}
